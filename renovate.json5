{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:recommended',
    ':dependencyDashboard',
  ],
  prHourlyLimit: 0,
  flux: {
    managerFilePatterns: [
      '/cluster/.+\\.ya?ml$/',
    ],
  },
  'helm-values': {
    managerFilePatterns: [
      '/cluster/.+\\.ya?ml$/',
    ],
  },
  kubernetes: {
    managerFilePatterns: [
      '/cluster/.+\\.ya?ml$/',
    ],
  },
  customManagers: [
    {
      customType: 'regex',
      description: [
        'Process custom dependencies',
      ],
      managerFilePatterns: [
        '/.+\\.ya?ml$/',
      ],
      matchStrings: [
        'datasource=(?<datasource>\\S+) depName=(?<depName>\\S+)( repository=(?<registryUrl>\\S+))?\\n.+: (&\\S+\\s)?(?<currentValue>\\S+)',
        'datasource=(?<datasource>\\S+) depName=(?<depName>\\S+)\\n.+/(?<currentValue>(v|\\d)[^/]+)',
      ],
      datasourceTemplate: '{{#if datasource}}{{{datasource}}}{{else}}github-releases{{/if}}',
    },
  ],
  semanticCommits: 'disabled',
  commitMessageTopic: '{{depName}}: renovate',
  commitMessageExtra: 'from {{currentVersion}} to {{newVersion}}',
  commitMessageSuffix: '',
  major: {
    minimumReleaseAge: '7 days',
  },
  minor: {
    minimumReleaseAge: '2 days',
  },
  packageRules: [
    {
      matchDatasources: [
        'helm',
      ],
      commitMessageTopic: 'chart {{depName}}',
    },
    {
      matchDatasources: [
        'docker',
      ],
      commitMessageTopic: 'image {{depName}}',
    },
    {
      matchDatasources: [
        'helm',
      ],
      commitMessageTopic: 'chart {{depName}}',
      matchUpdateTypes: [
        'minor',
        'patch',
      ],
      automerge: true,
    },
    {
      matchDatasources: [
        'docker',
      ],
      commitMessageTopic: 'image {{depName}}',
      matchUpdateTypes: [
        'minor',
        'patch',
      ],
      automerge: true,
    },
    {
      groupName: 'cilium',
      matchDatasources: [
        'helm',
      ],
      matchUpdateTypes: [
        'patch',
      ],
      automerge: true,
      matchPackageNames: [
        '/cilium/',
      ],
    },
    {
      description: 'Immich images',
      groupName: 'Immich',
      matchDatasources: [
        'docker',
      ],
      group: {
        commitMessageTopic: '{{{groupName}}} group',
      },
      automerge: false,
      matchPackageNames: [
        '/immich/',
      ],
    },
    {
      description: 'Rook-Ceph image and chart',
      groupName: 'Rook-Ceph',
      matchDatasources: [
        'docker',
        'helm',
      ],
      group: {
        commitMessageTopic: '{{{groupName}}} group',
      },
      automerge: false,
      matchPackageNames: [
        '/rook.ceph/',
      ],
    },
    {
      description: 'Talos',
      groupName: 'Talos',
      matchDatasources: [
        'docker',
      ],
      group: {
        commitMessageTopic: '{{{groupName}}} group',
      },
      automerge: false,
      separateMinorPatch: true,
      separateMultipleMinor: true,
      matchPackageNames: [
        '/siderolabs/talosctl/',
        '/siderolabs/installer/',
      ],
    },
    {
      description: 'Kubelet',
      groupName: 'Kubelet',
      matchDatasources: [
        'docker',
        'helm',
      ],
      group: {
        commitMessageTopic: '{{{groupName}}} group',
      },
      automerge: false,
      separateMinorPatch: true,
      separateMultipleMinor: true,
      matchPackageNames: [
        '/siderolabs/kubelet/',
        '/kubectl/',
      ],
    },
  ],
}
